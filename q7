// 7. Program to read multiple lines of text and count characters, words, and lines
#include <stdio.h>
int main() {
    char text[500];
    int i, chars = 0, words = 0, lines = 0;
    printf("Enter text (end with ~):\n");
    gets(text);
    for(i = 0; text[i] != '\0'; i++) {
        if(text[i] != ' ' && text[i] != '\n' && text[i] != '\t')
            chars++;
        if(text[i] == ' ' || text[i] == '\n' || text[i+1] == '\0')
            words++;
        if(text[i] == '\n')
            lines++;
    }
    printf("Characters: %d\nWords: %d\nLines: %d", chars, words, lines+1);
    return 0;
}
